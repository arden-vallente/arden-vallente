<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:munit="http://www.mulesoft.org/schema/mule/munit" xmlns:munit-tools="http://www.mulesoft.org/schema/mule/munit-tools"
	xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xsi:schemaLocation="
		http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
		http://www.mulesoft.org/schema/mule/munit http://www.mulesoft.org/schema/mule/munit/current/mule-munit.xsd
		http://www.mulesoft.org/schema/mule/munit-tools  http://www.mulesoft.org/schema/mule/munit-tools/current/mule-munit-tools.xsd">
	<munit:config name="proc-site-api-error-test-suite.xml" />
<munit:test
		name="proc-site-api-connectivity-test-error"
		doc:id="f86b147d-b8bd-448d-af11-80661dccabed"
		description="Connectivity Testing" tags="CONNECTIVITY">
		<munit:behavior>
			<munit-tools:mock-when
				doc:name="Mock GET /sys-sitetracker-api/site"
				doc:id="974c4f1a-d42a-4610-b22f-4fcf87e19865"
				processor="http:request">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="GET /sys-sitetracker-api/site" attributeName="doc:name" />
					<munit-tools:with-attribute whereValue="060a84fb-1604-4995-990e-9c195603d540" attributeName="doc:id" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:error typeId="FS:CONNECTIVITY" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution>
			<flow-ref
				doc:name="proc-site-api-flow"
				doc:id="e03aef91-915e-4110-b5d4-c8da05ca45d1"
				name="proc-site-api-flow" />
		</munit:execution>
		<munit:validation>
			<munit-tools:assert-equals
				doc:name="httpStatus 503"
				doc:id="660614d7-d7ac-4999-82dc-24bae6faa4ae"
				actual="#[vars.httpStatus]" expected="#[503]" />
		</munit:validation>
	</munit:test>
	<munit:test
		name="proc-site-api-error-process-record"
		doc:id="21dca48e-a6e8-42d1-82e4-1e4c331bfc79"
		description="Connectivity Testing" tags="CONNECTIVITY">
		<munit:behavior>
			<munit-tools:mock-when doc:id="244a6de8-8204-406d-aacd-8ec0610858d6" doc:name="Mock GET /sys-sitetracker-api/site" processor="http:request">
				<munit-tools:with-attributes>
					<munit-tools:with-attribute attributeName="doc:name" whereValue="GET /sys-sitetracker-api/site"/>
					<munit-tools:with-attribute attributeName="doc:id" whereValue="060a84fb-1604-4995-990e-9c195603d540"/>
				</munit-tools:with-attributes>
				<munit-tools:then-return>
					<munit-tools:payload encoding="UTF-8" mediaType="application/json" value="#[MunitTools::getResourceAsString('sample_data/get-site-response.json')]"/>
				</munit-tools:then-return>
			
</munit-tools:mock-when>
			<munit-tools:mock-when doc:id="efd6734c-3d8d-4895-b567-804c815384b5" doc:name="Mock GET /sys-business-central-api/dimension" processor="http:request">
				<munit-tools:with-attributes>
					<munit-tools:with-attribute attributeName="doc:name" whereValue="GET /sys-business-central-api/dimension"/>
					<munit-tools:with-attribute attributeName="doc:id" whereValue="b48635ed-9687-46d9-9dcf-14f9792fa722"/>
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:error typeId="FS:CONNECTIVITY" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution>
			<flow-ref
				doc:name="proc-site-api-flow"
				doc:id="7e067cde-876b-4e1b-a5e4-d7c031e23094"
				name="proc-site-api-flow" />
		</munit:execution>
		<munit:validation>
			<munit-tools:verify-call atLeast="1" doc:id="6a4e4003-bc85-4a65-a3ac-09263341d207" doc:name="Verify call GET /sys-sitetracker-api/site" processor="http:request">
				<munit-tools:with-attributes>
					<munit-tools:with-attribute attributeName="doc:name" whereValue="GET /sys-sitetracker-api/site"/>
					<munit-tools:with-attribute attributeName="doc:id" whereValue="060a84fb-1604-4995-990e-9c195603d540"/>
				</munit-tools:with-attributes>
			</munit-tools:verify-call>
			<munit-tools:verify-call atLeast="3" doc:id="bf86d312-b73a-4b3d-b6ac-cff748ea7d92" doc:name="Verify call GET /sys-business-central-api/dimension" processor="http:request">
				<munit-tools:with-attributes>
					<munit-tools:with-attribute attributeName="doc:name" whereValue="GET /sys-business-central-api/dimension"/>
					<munit-tools:with-attribute attributeName="doc:id" whereValue="b48635ed-9687-46d9-9dcf-14f9792fa722"/>
				</munit-tools:with-attributes>
			</munit-tools:verify-call>
		</munit:validation>
	</munit:test>
</mule>
